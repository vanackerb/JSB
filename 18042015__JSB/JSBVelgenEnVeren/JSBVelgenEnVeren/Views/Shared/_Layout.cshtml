<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JSB Velgen en veren</title>
    @Styles.Render("~/Content/bootstrap.css")
    <style type="text/css">
        ul.nav li.dropdown:hover > ul.dropdown-menu {
            display: block;}
    </style>

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse toppie ">
        <div class="background-top-image">
            <img src="~/Images/logo.png" />
        </div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Velgen", "Velgen", "Home")</li>
                            <li>@Html.ActionLink("Veren", "Veren", "Home")</li>
                            <li>@Html.ActionLink("Banden", "Tires", "Home")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Tips", "Tips", "Home")</li>

                    <li>@Html.ActionLink("Adminhome", "Adminhome", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="footer-center">
                &copy; @DateTime.Now.Year - JSB Velgen en veren  -
                @Html.ActionLink("Betaalmogelijkheden", "PayOption", "Terms")
                -
                @Html.ActionLink("Algemene Voorwaarden", "Terms", "Terms")
                -
                @Html.ActionLink("Leveringsvoorwaarden", "Delivery", "Terms")
                -
                @Html.ActionLink("Privacy Policy", "Privacy", "Terms")
            </p>
                               
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
