@model JSBVelgenEnVeren.ViewModel.ShoppingCartViewModel
@{
    ViewBag.Title = "Shoppingcart";
}
<script src="/Scripts/jquery-1.4.4.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        
        // Document.ready -> link up remove event handler
        $(".RemoveLink").click(function () {
            // Get the id from the link
            var recordToDelete = $(this).attr("data-id");
            if (recordToDelete != '') {
                // Perform the ajax post
                $.post("/ShoppingCart/RemoveFromCart", { "id": recordToDelete },
                    function (data) {
                        // Successful requests get here
                        // Update the page elements
                        if (data.ItemCount == 0) {
                            $('#row-' + data.DeleteId).fadeOut('slow');
                        } else {
                            $('#item-count-' + data.DeleteId).text(data.ItemCount);
                        }
                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(data.Message);
                        $('#cart-status').text('Shoppingcart (' + data.CartCount + ')');
                    });
            }
        });
    });
    function handleUpdate() {
        // Load and deserialize the returned JSON data
        var json = context.get_data();
        var data = Sys.Serialization.JavaScriptSerializer.deserialize(json);

        // Update the page elements
        if (data.ItemCount == 0) {
            $('#row-' + data.DeleteId).fadeOut('slow');
        } else {
            $('#item-count-' + data.DeleteId).text(data.ItemCount);
        }
        $('#cart-total').text(data.CartTotal);
        $('#update-message').text(data.Message);
        $('#cart-status').text('Shoppingcart (' + data.CartCount + ')');
    }
</script>
<h3>
    <em>Inhoud</em> 
</h3>

@if (Model.CartItems.Count != 0)
    {
        <p class="button">
            @Html.ActionLink("Afronden>>", "AddressAndPayment", "Checkout")
        </p>
    }
<div id="update-message">
</div>
<div class="row">
    <table class="table-bordered">
        <tr class="col">
            <th>
                Product Naam
            </th>
            <th>
                Prijs
            </th>
            <th>
                Aantal
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr id="row-@item.RecordId">
                <td>
                   <br /> @Html.ActionLink(item.Product.Naam, "Detail", "Store", new { id = item.ProductId }, null)
                </td>
                <td>
                   <br /> @item.Product.Prijs €
                </td>
                <td id="item-count-@item.RecordId">
                    <br />@item.Count
                </td>
                <td >
                    <br />@*<button class="RemoveLink" data-id="@item.RecordId">Verwijder uit mandje</button>*@
                    @Html.ActionLink("Verwijderen", "RemoveFromCart", "ShoppingCart", new { id = item.ProductId }, "")
                    
                </td>
            </tr>
        }
        <tr>
            <td>
               <br /> Totale prijs:
            </td>
            <td></td>
            <td></td>
            <td id="cart-total">
               <br /> @Model.CartTotal
            </td>
        </tr>
    </table><br />
</div>
@Html.ActionLink("Verder naar home", "Index", "Home")

